{% extends 'base.html.twig' %}

{% block title %}{{ list.name }}{% endblock %}

{% block body %}
    <h1>{{ list.name }}</h1>

    <p><a href="{{ path('app_lists') }}">← Vissza a listáimhoz</a></p>

    <h2>Új tétel hozzáadása</h2>
    <form method="post" action="{{ path('app_list_show', {id: list.id}) }}">
        <input type="text" name="name" placeholder="Új tétel neve" required>
        <button type="submit">Hozzáadás</button>
    </form>

    <h2>Tételek</h2>
    {% if list.items is empty %}
        <p>Még nincs tétel ezen a listán.</p>
    {% else %}
        <ul>
            {% for item in list.items %}
                <li>
                    {{ item.name }}
                    <form method="post" action="{{ path('app_item_delete', {listId: list.id, itemId: item.id}) }}" style="display:inline">
                        <button type="submit">Törlés</button>
                    </form>
                </li>
            {% endfor %}
        </ul>
    {% endif %}
{% endblock %}
